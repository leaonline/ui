{
	"$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"noDelete": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noUselessThisAlias": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"indentStyle": "space",
			"indentWidth": 2,
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
